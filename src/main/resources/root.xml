<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!-- 根目录 / -->
    <package name="root" namespace="/" extends="default">
        <action name="" class="">
            <result name="success" type="redirectAction">home</result>
        </action>
        <action name="home" class="com.free4lab.babycheckup.action.HomeAction">
            <result name="success">index.jsp</result>
        </action>
        <action name="record">
            <result>views/babyadmin.jsp</result>
        </action>
        <!--测试类型判断-->
        <action name="newtest" method="newTestChoice" class="com.free4lab.babycheckup.action.TestAction">
            <result name="success" type="redirect">${redirectUrl}?testid=${testid}&amp;babyid=${babyid}</result>
        </action>
        <!--0-6岁测试-->
        <action name="newtest0_6" method="newTest0_6" class="com.free4lab.babycheckup.action.TestAction">
            <result name="success" >views/newTest1.jsp</result>
        </action>
        <!--3-6岁测试-->
        <action name="newtest3_6" method="newTest3_6" class="com.free4lab.babycheckup.action.TestAction">
            <result name="success" >views/newTest3_6.jsp</result>
        </action>
        <!--0-2岁测试-->
        <action name="newtest0_2" method="newTest0_2" class="com.free4lab.babycheckup.action.TestAction">
            <result name="success" >views/newTest0_2.jsp</result>
        </action>
        <!--50岁学龄测试-->
        <action name="newtest50" method="newTest50" class="com.free4lab.babycheckup.action.TestAction">
            <result name="success" >views/newTest50.jsp</result>
        </action>
        <!--0-6岁结果-->
        <action name="showreult" method="showResult" class="com.free4lab.babycheckup.action.ResultAction">
            <result name="success" >views/showresult.jsp</result>
        </action>

        <!--3-6岁结果-->
        <action name="showresult3_6" method="showResult3_6" class="com.free4lab.babycheckup.action.ResultAction3_6">
            <result name="success" >views/showresult3_6.jsp</result>
        </action>
        <!--0-2岁结果-->
        <action name="showresult0_2" method="showResult0_2" class="com.free4lab.babycheckup.action.ResultAction0_2">
            <result name="success" >views/showresult0_2.jsp</result>
        </action>
        <!--50结果-->
        <action name="showresult50" method="showResult50" class="com.free4lab.babycheckup.action.ResultAction50">
            <result name="success" >views/showresult50.jsp</result>
        </action>
        <action name="saveresult" method="saveResult" class="com.free4lab.babycheckup.action.TestAction">
            <result type="json" name="success">
                <param name="includeProperties">result,result.id</param>
            </result>
        </action>
        <!--3-6岁结果-->
        <action name="saveresult3_6" method="saveResult3_6" class="com.free4lab.babycheckup.action.TestAction">
            <result type="json" name="success">
                <param name="includeProperties">result3_6,result3_6.id</param>
            </result>
        </action>

        <!--0-2岁结果-->
        <action name="saveresult0_2" method="saveResult0_2" class="com.free4lab.babycheckup.action.TestAction">
            <result type="json" name="success">
                <param name="includeProperties">result0_2,result0_2.id</param>
            </result>
        </action>

        <!--0-2岁结果-->
        <action name="saveresult50" method="saveResult50" class="com.free4lab.babycheckup.action.TestAction">
            <result type="json" name="success">
                <param name="includeProperties">result50,result50.id</param>
            </result>
        </action>

        <action name="admin" method="indexAdmin" class="com.free4lab.babycheckup.action.AdminAction">
            <result name="success">views/index_admin.jsp</result>
        </action>
        <action name="useradmin" method="userAdmin" class="com.free4lab.babycheckup.action.AdminAction">
            <result name="success">views/user_admin.jsp</result>
        </action>
        <action name="babyset_admin" method="babySetAdmin" class="com.free4lab.babycheckup.action.AdminAction">
            <result name="success">views/babyset_admin.jsp</result>
        </action>
        <action name="savebabyset" method="saveNewBabySchema" class="com.free4lab.babycheckup.action.AdminAction">
            <result type="json" name="success"> </result>
        </action>
        <action name="baby_admin"  class="">
            <result name="success">views/baby_admin.jsp</result>
        </action>
        <action name="testadmin" method="" class="">
            <result name="success">views/test_admin.jsp</result>
        </action>
        <action name="monthage" method="testMonthage" class="com.free4lab.babycheckup.action.BabyAction">
            <result type="json" name="success">
                <param name="includeProperties">babyid,flag</param>
            </result>
        </action>
        <!--是不是能进行4-7的学龄测试-->
        <action name="monthage50" method="testMonthAge50" class="com.free4lab.babycheckup.action.BabyAction">
            <result type="json" name="success">
                <param name="includeProperties">babyid,flag</param>
            </result>
        </action>
        <action name="findhospital" method="findHospital" class="com.free4lab.babycheckup.action.HospitalAction">
            <result type="json" name="success">
                <param name="includeProperties">name</param>
            </result>
        </action>
        <action name="updatehospital" method="updateHospital" class="com.free4lab.babycheckup.action.HospitalAction">
            <result type="json" name="success">
                <param name="includeProperties">name,flag</param>
            </result>
        </action>
    </package>
</struts>